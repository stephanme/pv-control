{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Group Angular updates",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "/@angular.*/"
      ],
      "groupName": "angular"
    },
    {
      "description": "Group UI dev dependency updates",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "**",
        "!/@angular.*/",
        "!typescript"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "UI dev dependencies"
    },
    {
      "description": "Ignore @types/node updates to v22",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "@types/node"
      ],
      "allowedVersions": "<21"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update version ARGs in Dockerfile",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG.*_VERSION=\"?(?<currentValue>.*)\"?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}