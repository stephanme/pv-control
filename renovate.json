{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "No Python version update",
      "matchDatasources": [
        "docker"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/python/"
      ]
    },
    {
      "description": "Group Angular updates",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "/@angular.*/"
      ],
      "groupName": "angular"
    },
    {
      "description": "Group UI dev dependency updates",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "**",
        "!/@angular.*/",
        "!typescript"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "UI dev dependencies"
    },
    {
      "description": "Ignore @types/node updates to v22",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "@types/node"
      ],
      "allowedVersions": "<21"
    }
  ]
}